{
  "componentId": "inside_zone",
  "componentType": "node.algorithm.policy",
  "id": "pol-inside-zone",
  "label": "Policy",
  "name": "Inside Zone",
  "category": "spatial_filter",
  "framework": "Shapely",
  "license": "MIT",
  "repo_url": "https://shapely.readthedocs.io/",

  "modelDetails": {
    "description": "Spatial filtering policy that uses Shapely library to check whether the pivot point of bounding boxes is within predefined zones",
    "intended_use": "Filter objects based on their spatial location within defined zones or regions of interest",
    "limitations": ["Only supports 2D spatial filtering", "Requires predefined zone polygons", "Pivot point based filtering only"],
    "ethical_considerations": "Ensure zone definitions do not introduce bias in surveillance applications"
  },

  "parameters": {
    "computational_complexity": "O(n*m) where n=objects, m=zones",
    "dependencies": ["shapely", "numpy"],
    "memory_footprint": "Low",
    "processing_type": "geometric_operations"
  },

  "configuration": {
    "pivotPoint": {
      "description": "Pivot point to use for bounding box zone checking",
      "type": "string",
      "allowed_values": ["top", "mid", "bottom"],
      "default": "mid"
    },
    "zone_names": {
      "description": "List of zone names to filter objects within (supplied dynamically)",
      "type": "list",
      "default": [],
      "dynamic": true
    },
    "zones": {
      "description": "Dictionary of zone definitions with polygon coordinates (updated dynamically)",
      "type": "dict",
      "format": "{'zone_name': [[x1,y1], [x2,y2], ...]}",
      "dynamic": true
    }
  },

  "dynamic_parameters": {
    "supports_runtime_updates": true,
    "updateable_parameters": ["zone_names", "zones", "pivotPoint"],
    "update_latency_ms": 10,
    "api_endpoints": {
      "update_zones": "/api/v1/policies/inside_zone/update_zones",
      "update_parameters": "/api/v1/policies/inside_zone/update_parameters"
    }
  },

  "runtime": {
    "cpu_intensive": false,
    "gpu_required": false,
    "min_ram_mb": 100,
    "recommended_cpu": "Any modern CPU",
    "python_version": "3.7+",
    "dependencies": {
      "shapely": ">=1.8.0",
      "numpy": ">=1.20.0"
    }
  },

  "benchmarks": {
    "throughput": {
      "objects_per_second": 5000,
      "zones_supported": 50,
      "latency_ms": 0.2
    },
    "accuracy": {
      "spatial_precision": "pixel-perfect",
      "edge_case_handling": "robust"
    }
  },

  "produces": ["filtered_detections", "zone_metadata"],
  "consumes": ["bboxes", "zone_definitions"],
  
  "input_formats": ["OD1"],
  "output_formats": ["OD1"],

  "sources": [
    {
      "title": "Shapely Documentation",
      "url": "https://shapely.readthedocs.io/"
    },
    {
      "title": "Point-in-Polygon Algorithm",
      "url": "https://en.wikipedia.org/wiki/Point_in_polygon"
    }
  ],

  "notes": "Highly efficient for real-time applications. Supports complex polygon shapes. Pivot point selection affects filtering behavior significantly."
}
